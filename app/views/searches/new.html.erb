<%= form_with model: @search,local:true do |form|%>
    <div class="field">
        <%= form.label :keywords%>
        <%= form.text_field :keywords%>
    </div>

    <div class="field">
        <%= form.label :category%>
        <%= form.text_field :category%>
         <%# options_for_select(@categories), :include_blank =>true %> 
    </div>

    <div class="field">
        <%= form.label  :min_price, "Min Price"%> - <%= form.text_field :min_price, size: 10%>
        <%= form.label  :min_price, "Max Price"%> - <%= form.text_field :max_price, size: 10%>
        <%= form.text_field :keywords%>
    </div>

    <div class="field">
        <%= form.label :isbn, "ISBN"%>-<%= form.text_field :isbn, size:10%>
        
    </div>
    <div class="action">
        <%=form.submit "Search",class:"pure-button pure-button-primary"%>
    </div>

<%end%>